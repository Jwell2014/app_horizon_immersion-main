{% extends 'base_ju.html.twig' %}

{% block title %}ImgSat index{% endblock %}

{% block body %}
    <h1>ImgSat index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Image</th>
                <th>IsActive</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for img_sat in img_sats %}
            <tr>
                <td>{{ img_sat.id }}</td>
                <td>{{ img_sat.image }}</td>
                <td>{{ img_sat.isActive ? 'Yes' : 'No' }}</td>
                <td>
                    <a href="{{ path('app_img_sat_show', {'id': img_sat.id}) }}">show</a>
                    <a href="{{ path('app_img_sat_edit', {'id': img_sat.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_img_sat_new') }}">Create new</a>
{% endblock %}
